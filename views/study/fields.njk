<section class="card-info">

        <div class="info create">
            <div>URL do avatar</div>
            <input 
                type="url" 
                name="avatar_url"
                placeholder=" http://"
                value="{{student.avatar_url}}"
            >
        </div>

        <div class="info create">
            <div>Nome Completo</div>
            <input 
                type="text" 
                name="name"
                value="{{student.name}}"
            >
        </div>

        <div class="info create">
            <div>Data de nascimento</div>
            <input 
                type="date" 
                name="birth"
                value="{{student.birth}}"
            >
        </div>

        <div class="info create">
            <div>Email</div>
            <input 
                type="email" 
                name="email"
                value="{{student.email}}"
            >
        </div>

        <div class="info create">
            <div>Ano escolar</div>
            <select name="grade">
                <option value="5F" {% if student.grade == "5F" %}selected{% endif %}>5° ano do Ensino Fundamental</option>
                <option value="6F" {% if student.grade == "6F" %}selected{% endif %}>6° ano do Ensino Fundamental</option>
                <option value="7F" {% if student.grade == "7F" %}selected{% endif %}>7° ano do Ensino Fundamental</option>
                <option value="8F" {% if student.grade == "8F" %}selected{% endif %}>8° ano do Ensino Fundamental</option>
                <option value="9F" {% if student.grade == "9F" %}selected{% endif %}>9° ano do Ensino Fundamental</option>
                <option value="1M" {% if student.grade == "1M" %}selected{% endif %}>1° ano do Ensino Médio</option>
                <option value="2M" {% if student.grade == "2M" %}selected{% endif %}>2° ano do Ensino Médio</option>
                <option value="3M" {% if student.grade == "3M" %}selected{% endif %}>3° ano do Ensino Médio</option>
            </select>
        </div>

        <div class="info create">
            <div>Carga horária semanal</div>
            <input 
                type="number" 
                name="study_load"
                placeholder=" Somente o n° de horas esperado"
                value="{{student.study_load}}"
            >
        </div>

        </section>

        <button type="submit">Salvar</button>